    /* Ajout de l'effet souligné */

      .Option{
    text-decoration:none;
    padding: 5px 0px;
    padding-bottom: 1px;
    text-align: center;
    }

    .Option:after {
      content: '';
      display: block;
      margin: auto;
      height: 1px;
      width: 0;
      background: transparent;
      transition: width .5s ease, background-color .5s ease;
    }

    .Option:hover:after {
        width: 90%;
        background: lightgrey;
      }

      /* Fin de l'ajout de l'effet souligné */



